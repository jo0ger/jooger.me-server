.container(style=`
    --dark-color: #000;
    --dark-color-light: rgba(0, 0, 0, 0.2);
    --light-color: #fff;
    --light-color-light: hsla(0, 0%, 100%, 0.2);
    --body-color: #f2f2f2;
    --primary-color: #302e31;
    --primary-color-light: rgba(48, 46, 49, 0.2);
    --overlay-color: rgba(0, 0, 0, 0.6);
    --overlay-color-dark: rgba(0, 0, 0, 0.8);
    --heading-color: rgba(0, 0, 0, 0.85);
    --text-color: rgba(0, 0, 0, 0.65);
    --text-color-secondary: rgba(0, 0, 0, 0.43);
    --disabled-color: rgba(0, 0, 0, 0.25);
    --link-color: rgba(0, 0, 0, 0.65);
    --link-color-hover: rgba(0, 0, 0, 0.85);
    --card-color: hsla(0, 0%, 100%, 0.8);
    --border-color: #e6e6e6;
    --border-color-dark: #cfcfcf;
    --keyword-color: #f56a00;
    --keyword-color-light: rgba(245, 106, 0, 0.2);
    --button-color: #f2f2f2;
    --button-color-hover: #dadada;
    --selection-color: #add8f7;
    --code-color: #ebebeb;
    --code-color-light: #f2f2f2;
    --code-color-dark: #e6e6e6;
    --box-shadow-color: #ebebeb;
    --markdown-color: rgba(0, 0, 0, 0.85)
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
    padding: 24px;
    background-color: #fff;
    border-radius: 4px;
    border: 1px solid #e6e6e6;
    color: var(--text-color);
    font-size: 14px;
`)
  .header(style=`
    text-align: center
  `)
    p.title #{title}
  .main
    .comment
      .title(style=`
        position: relative;
        height: 24px;
        line-height: 24px;
      `)
        img.avatar(
            src=author.avatar
            style=`
                position: absolute;
                top: 0;
                left: 0;
                width: 24px;
                height: 24px;
                border-radius: 50%;
            `
        )
        h3.name(style=`
            margin: 0;
            margin-left: 32px;
            font-size: 16px;
        `) #{author.name}
        .time(style=`
            position: absolute;
            top: 0;
            right: 0;
            color: rgba(0, 0, 0, 0.43);
        `) #{createdAt}
      .content.markdown-body(style=`
        margin: 8px 0;
      `)
        != renderedContent
  .footer(style=`
    margin-top: 32px;
    text-align: center;
  `)
    a(
      href=link
      target="_blank"
      style=`
        padding: 8px 16px;
        background: #f2f2f2;
        border-radius: 4px;
        color: rgba(0, 0, 0, 0.65);
        text-decoration: none;
      `
    ) 去回复

